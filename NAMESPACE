importFrom(utils, download.file, untar, unzip)
importFrom(tools, R_user_dir, file_path_as_absolute)

importFrom(httr, GET, HEAD, content, user_agent, stop_for_status)
importFrom(xml2, read_html)
importFrom(rvest, html_elements, html_text)

import(S4Vectors)
import(GenomeInfoDb)
import(Biostrings)


### - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
### Export S3 methods
###

S3method(print, igblast_info)

### We also export them thru the export() directive so that (a) they can be
### called directly, (b) tab-completion on the name of the generic shows them,
### and (c) methods() doesn't asterisk them.

export(
    print.igblast_info
)


### - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
### Export non-generic functions
###

export(
    ## From igblast_info.R:
    get_igblast_root, set_igblast_root, igblast_version, igblast_info,

    ## From install_igblast.R:
    install_igblast,

    ## From VQUEST-utils.R:
    download_VQUEST_germline_sequences,
    download_VQUEST_germline_sequences_to_cache,

    ## From make_igblast_germline_db_from_NCBI.R:
    make_igblast_germline_db_from_NCBI,
    make_igblast_germline_db_from_VQUEST,

    ## From install_VQUEST_germline_db.R:
    install_VQUEST_germline_db,

    ## From igblastn.R:
    igblastn
)

