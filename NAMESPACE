import(methods)

importFrom(utils, download.file, untar, unzip, read.table, browseURL, URLencode)
importFrom(stats, setNames)
importFrom(tools, R_user_dir, file_path_as_absolute)

importFrom(httr, GET, HEAD, content, user_agent, stop_for_status)
importFrom(xml2, read_html)
importFrom(rvest, html_elements, html_text)
importFrom(xtable, xtable)
import(tibble)

import(S4Vectors)
import(IRanges)
import(GenomeInfoDb)
import(Biostrings)


### - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
### Export S3 methods
###

S3method(print, fmt7record)
S3method(print, igblast_info)
S3method(print, outfmt7)

S3method(query, fmt7record)
S3method(query, query_details)

S3method(summary, alignment_summary)
S3method(summary, hit_table)
S3method(summary, query_details)
S3method(summary, subregion_sequence_details)
S3method(summary, VDJ_rearrangement_summary)
S3method(summary, VDJ_junction_details)

### We also export them thru the export() directive so that (a) they can be
### called directly, (b) tab-completion on the name of the generic shows them,
### and (c) methods() doesn't asterisk them.

export(
    print.fmt7record,
    print.igblast_info,
    print.outfmt7,

    query.fmt7record,
    query.query_details,

    summary.alignment_summary,
    summary.hit_table,
    summary.query_details,
    summary.subregion_sequence_details,
    summary.VDJ_rearrangement_summary,
    summary.VDJ_junction_details
)


### - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
### Export non-generic functions
###

export(
    ## From get_igblast_root.R:
    get_igblast_root, set_igblast_root,

    ## From igblast_info.R:
    has_igblast, igblast_version, list_igblast_organisms, igblast_info,

    ## From install_igblast.R:
    install_igblast,

    ## From list_germline_dbs.R:
    list_germline_dbs,
    use_germline_db,
    load_germline_db,

    ## From list_c_region_dbs.R:
    list_c_region_dbs,
    use_c_region_db,
    load_c_region_db,

    ## From install_IMGT_germline_db.R:
    list_IMGT_releases,
    install_IMGT_germline_db,

    ## From install_AIRR_germline_db.R:
    install_AIRR_germline_db,

    ## From igblastn.R:
    igblastn, igblastn_help
)

